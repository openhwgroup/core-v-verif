+        {
+            string base, name;
+            std::size_t n_base = str.find_last_of("/");
+            if (n_base != std::string::npos)
+            {
+                base = str.substr(0, n_base + 1);
+                name = str.substr(n_base + 1, str.length());
+                return this->get(base, name);
+            }
+            return Param();
+
+        }
+
+    };
