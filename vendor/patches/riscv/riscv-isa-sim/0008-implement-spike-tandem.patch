+  uint64_t bootrom_base = std::any_cast<uint64_t>(this->params["/top/bootrom_base"]);
+  uint64_t bootrom_size = std::any_cast<uint64_t>(this->params["/top/bootrom_size"]);
+  if (bootrom) {
